html, body
  background #FFF
  font-family Arial, sans-serif
  font-weight bold
  margin 0
  padding 0
  text-transform lowercase

.container
  padding 0
  width 100%

.header
  margin 0
  padding 0

  img
    margin 0 20px 0 0
    height 80px
    width 80px

  a
    color #000
    font-size 20px
    text-decoration none

    &:hover
      color #C91717
      text-decoration

.main
  h2
    background #000
    color #FFF
    font-size 16px
    height 80px
    margin 0
    padding 10px
    position absolute
    width 80px
    z-index 1

.item
  cursor pointer
  margin 0
  padding 0

  &:hover
    background #000
    text-decoration none
    transition background 500ms

p.author
  color #000
  padding 24px
  text-align left

.item:hover
  p.author, a
    color #FFF
    text-decoration none

.photo
  margin 0 0 80px

  img
    width 100%

  h2
    color #000
    padding 20px 108px

  p
    color #6f6f6f
    margin 0
    padding 0 108px 0

